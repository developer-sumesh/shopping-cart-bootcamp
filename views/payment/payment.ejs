<%- include("../partials/header") %> 
<%- include("../partials/navbar") %> 

<div class="container" style="margin-top: 3rem;width:80vw;">
     <form class="needs-validation" action="#" method="POST" style="max-width:90%;margin:10px auto;" novalidate>
        <h6 class="display-6">Add your payment Info</h6>
        <div class="mb-3">
                  <label for="name" class="form-label">Name</label>
                  <input type="text" class="form-control" id="name" placeholder="name" name="product[name]" required>
                  <div class="valid-feedback">
                    great name
                  </div>
                </div>
                <div class="mb-3">
                  <label for="img" class="form-label">Image</label>
                  <input type="text" class="form-control" id="img" placeholder="Image URL" name="product[img]" required>
                  <div class="valid-feedback">
                    image url 
                  </div>
                </div>
                <div class="mb-3">
                    <label for="address" class="form-label">Description</label>
                    <textarea class="form-control" name="address" id="address" cols="30" rows="2" required></textarea>
                    <div class="valid-feedback">
                      good Description 
                    </div>
                </div>
        
                <button type="submit" class="btn btn-primary">Submit</button>
    </form>             
</div>


