<%- include("../partials/header") %> 
<%- include("../partials/navbar") %> 

<div class="container" style="margin-top: 3rem;width:80vw;">
     <form class="needs-validation" action="/products" method="POST" style="max-width:90%;margin:10px auto;" novalidate>
        <div class="mb-3">
                  <label for="name" class="form-label">Name</label>
                  <input type="text" class="form-control" id="name" placeholder="name" name="product[name]" required>
                  <div class="valid-feedback">
                    great name
                  </div>
                </div>
                <div class="mb-3">
                  <label for="img" class="form-label">Image</label>
                  <input type="text" class="form-control" id="img" placeholder="Image URL" name="product[img]" required>
                  <div class="valid-feedback">
                    image url 
                  </div>
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">price</label>
                    <input type="number" class="form-control" id="price" placeholder="Price" name="product[price]" required>
                    <div class="valid-feedback">
                      price is good
                    </div>
                </div>
                <div class="mb-3">
                    <label for="desc" class="form-label">Description</label>
                    <textarea class="form-control" name="product[desc]" id="desc" cols="30" rows="5" required></textarea>
                    <div class="valid-feedback">
                      good Description 
                    </div>
                </div>
        
                <button type="submit" class="btn btn-primary">Submit</button>
    </form>             
</div>


<%- include("../partials/footer")  %>