<%- include("../partials/header") %> 
<%- include("../partials/navbar") %> 

<div class="container" style="margin-top: 3rem;width:80vw;">
     <form class="needs-validation" action="/products/<%= product._id%>?_method=PATCH" method="POST" style="max-width:90%;margin:10px auto;" novalidate>
        <div class="mb-3">
                  <label for="name" class="form-label">Name</label>
                  <input type="text" class="form-control" id="name" placeholder="name" name="product[name]" value="<%= product.name %>" required>
                </div>
                <div class="mb-3">
                  <label for="img" class="form-label">Image</label>
                  <input type="text" class="form-control" id="img" placeholder="Image URL" name="product[img]" value="<%= product.img %>" required>
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">price</label>
                    <input type="number" class="form-control" id="price" placeholder="Price" name="product[price]"value="<%= product.price %>" required>
                </div>
                <div class="mb-3">
                    <label for="desc" class="form-label">Description</label>
                    <textarea class="form-control" name="product[desc]" id="desc" cols="30" rows="5" required><%= product.desc %></textarea>
                </div>
        
                <button type="submit" class="btn btn-primary">Submit</button>
    </form>             
</div>

<%- include("../partials/footer")  %>